
    <main>
        {{#if hasItems}} {{!-- handlebars DO NOT ACCEPT LOGIC in the template, only accept boolean, string, number, etc. type --}}
            <div class="grid">
                {{#each items}}
                    <article class="card product-item" style="max-width: 200px">
                        <header class="card__header">
                            <h1 class="product__title">{{this.title}}</h1>
                        </header>
                        <div class="card__image">
                            <img src="http://www.columbiactlibrary.org/wp-content/uploads/2012/10/books.png" alt="" width="100%">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$19.99</h2>
                            <p class="product__description">A very interesting book about so many events</p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                {{/each}}
            </div>
        {{else}}
            <h1>No Product Available!</h1>
        {{/if}}
    </main>